<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              tools:context=".MainActivity">

    <org.ligi.rcmon.StickView
            android:layout_width="fill_parent"
            android:layout_height="165dp"
            android:id="@+id/stickView"
            />






    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

        <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/poti1Progress"/>

        <TextView
                android:layout_width="30dp"
                android:text="foo"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/poti1Text"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

        <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/poti2Progress"/>

        <TextView
                android:layout_width="30dp"
                android:text="foo"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/poti2Text"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="2dp">

        <ProgressBar
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/poti3Progress"/>

        <TextView
                android:layout_width="30dp"
                android:text="foo"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/poti3Text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_height="0dip"
        android:layout_width="match_parent" >

        <TextView
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:id="@+id/battTV"
                />

        <org.ligi.rcmon.ArtificialHorizon
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"/>


    </LinearLayout>


</LinearLayout>
